<section class="block-marketing-gallery-showcase">
  <div class="block-marketing-gallery-showcase__inner alignwide is-constrained">
    {%- if section.settings.heading != blank -%}
      {%- render 'html-marketing-headline',
        heading: section.settings.heading,
        subheading: section.settings.subheading,
        alignment: 'center',
        size: section.settings.heading_size
      -%}
    {%- endif -%}
    
    {%- if section.settings.text != blank -%}
      {%- render 'html-marketing-text',
        text: section.settings.text,
        alignment: 'center',
        width: 'medium'
      -%}
    {%- endif -%}
    
    {%- liquid
      assign images_array = ''
      assign images_array = images_array | split: ','
      
      for block in section.blocks
        if block.type == 'image'
          assign images_array = images_array | concat: block.settings.image
        endif
      endfor
    -%}
    
    {%- if section.blocks.size > 0 -%}
      <div class="block-marketing-gallery-showcase__gallery">
        <div class="gallery-grid gallery-grid--{{ section.settings.layout }} gallery-grid--cols-{{ section.settings.columns }}">
          {%- for block in section.blocks -%}
            {%- if block.type == 'image' -%}
              <div class="gallery-grid__item" {{ block.shopify_attributes }}>
                {%- if block.settings.image -%}
                  {%- if section.settings.enable_lightbox -%}
                    <a href="{{ block.settings.image | image_url: width: 2000 }}" class="gallery-grid__link" data-lightbox="gallery">
                  {%- elsif block.settings.link -%}
                    <a href="{{ block.settings.link }}" class="gallery-grid__link">
                  {%- endif -%}
                  
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    srcset="
                      {{ block.settings.image | image_url: width: 400 }} 400w,
                      {{ block.settings.image | image_url: width: 600 }} 600w,
                      {{ block.settings.image | image_url: width: 800 }} 800w,
                      {{ block.settings.image | image_url: width: 1200 }} 1200w
                    "
                    sizes="(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw"
                    alt="{{ block.settings.image.alt | default: block.settings.caption | escape }}"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                    loading="lazy"
                    class="gallery-grid__image"
                  />
                  
                  {%- if block.settings.caption != blank and section.settings.show_captions -%}
                    <div class="gallery-grid__caption">
                      {{ block.settings.caption | escape }}
                    </div>
                  {%- endif -%}
                  
                  {%- if section.settings.enable_lightbox or block.settings.link -%}
                    </a>
                  {%- endif -%}
                {%- else -%}
                  <div class="gallery-grid__placeholder">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
    
    {%- if section.settings.cta_text != blank and section.settings.cta_url != blank -%}
      <div class="block-marketing-gallery-showcase__cta">
        {%- render 'html-marketing-cta',
          text: section.settings.cta_text,
          url: section.settings.cta_url,
          style: section.settings.cta_style,
          alignment: 'center'
        -%}
      </div>
    {%- endif -%}
  </div>
</section>

{%- style -%}
  .block-marketing-gallery-showcase__gallery {
    margin-top: 3rem;
  }
  
  .block-marketing-gallery-showcase__cta {
    margin-top: 3rem;
  }
  
  .gallery-grid {
    display: grid;
    gap: {{ section.settings.gap }}rem;
  }
  
  .gallery-grid--grid {
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
  }
  
  .gallery-grid--masonry {
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    grid-auto-rows: 10px;
  }
  
  .gallery-grid--carousel {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
  }
  
  .gallery-grid--carousel .gallery-grid__item {
    flex: 0 0 80%;
    scroll-snap-align: start;
  }
  
  .gallery-grid__item {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }
  
  .gallery-grid__link {
    display: block;
    position: relative;
  }
  
  .gallery-grid__image {
    width: 100%;
    height: 100%;
    display: block;
    transition: transform 0.3s ease;
  }
  
  {% if section.settings.aspect_ratio != 'auto' %}
    .gallery-grid__image {
      object-fit: cover;
    }
    
    {% if section.settings.aspect_ratio == 'square' %}
      .gallery-grid__image {
        aspect-ratio: 1 / 1;
      }
    {% elsif section.settings.aspect_ratio == 'landscape' %}
      .gallery-grid__image {
        aspect-ratio: 16 / 9;
      }
    {% elsif section.settings.aspect_ratio == 'portrait' %}
      .gallery-grid__image {
        aspect-ratio: 3 / 4;
      }
    {% endif %}
  {% endif %}
  
  .gallery-grid__link:hover .gallery-grid__image {
    transform: scale(1.05);
  }
  
  .gallery-grid__caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    color: #fff;
    font-size: 0.875rem;
  }
  
  .gallery-grid__placeholder {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .gallery-grid__placeholder svg {
    width: 50%;
    height: auto;
    opacity: 0.2;
  }
  
  @media (min-width: 750px) {
    .gallery-grid--carousel .gallery-grid__item {
      flex: 0 0 50%;
    }
  }
  
  @media (min-width: 990px) {
    .gallery-grid--carousel .gallery-grid__item {
      flex: 0 0 33.333%;
    }
  }
  
  @media (max-width: 989px) {
    .gallery-grid--grid.gallery-grid--cols-4,
    .gallery-grid--masonry.gallery-grid--cols-4 {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }
  
  @media (max-width: 749px) {
    .gallery-grid--grid,
    .gallery-grid--masonry {
      grid-template-columns: 1fr !important;
    }
    
    .block-marketing-gallery-showcase__gallery {
      margin-top: 2rem;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Gallery Showcase",
  "tag": "section",
  "class": "block-marketing-gallery-showcase",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Gallery"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ],
      "default": "medium"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Gallery Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "grid", "label": "Grid" },
        { "value": "masonry", "label": "Masonry" },
        { "value": "carousel", "label": "Carousel" }
      ],
      "default": "grid"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Image Aspect Ratio",
      "options": [
        { "value": "auto", "label": "Auto" },
        { "value": "square", "label": "Square (1:1)" },
        { "value": "landscape", "label": "Landscape (16:9)" },
        { "value": "portrait", "label": "Portrait (3:4)" }
      ],
      "default": "square"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap Between Images",
      "min": 0,
      "max": 4,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 24,
      "step": 2,
      "unit": "px",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "show_captions",
      "label": "Show Captions",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_lightbox",
      "label": "Enable Lightbox",
      "default": false,
      "info": "Opens images in full screen when clicked"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "cta_style",
      "label": "Button Style",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" },
        { "value": "outline", "label": "Outline" }
      ],
      "default": "outline"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional link (ignored if lightbox is enabled)"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Gallery Showcase",
      "category": "Homework",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
