{%- comment -%}
  ============================================================================
  MAIN-POLICY
  ============================================================================
  Main content section for policy pages (Privacy, Terms, Refund, etc.)
  Called from theme.liquid when request.path contains '/policies/'

  FEATURES:
  - Auto-detects which policy to show based on URL
  - Consistent typography and layout
  - Uses shop.* policy objects

  AVAILABLE POLICIES:
  - /policies/privacy-policy → shop.privacy_policy
  - /policies/refund-policy → shop.refund_policy
  - /policies/terms-of-service → shop.terms_of_service
  - /policies/shipping-policy → shop.shipping_policy
  - /policies/subscription-policy → shop.subscription_policy
  - /policies/legal-notice → shop.legal_notice
  ============================================================================
{%- endcomment -%}

{%- liquid
  assign current_policy = nil
  
  if request.path contains '/privacy-policy'
    assign current_policy = shop.privacy_policy
  elsif request.path contains '/refund-policy'
    assign current_policy = shop.refund_policy
  elsif request.path contains '/terms-of-service'
    assign current_policy = shop.terms_of_service
  elsif request.path contains '/shipping-policy'
    assign current_policy = shop.shipping_policy
  elsif request.path contains '/subscription-policy'
    assign current_policy = shop.subscription_policy
  elsif request.path contains '/legal-notice'
    assign current_policy = shop.legal_notice
  endif
-%}

{%- if current_policy != blank -%}
  <div class="main-policy__content align">
    <h1 class="main-policy__title">{{ current_policy.title }}</h1>
    
    <div class="main-policy__body rte">
      {{ current_policy.body }}
    </div>
  </div>
{%- endif -%}

{% style %}
  #shopify-section-{{ section.id }}.main-policy {
    background-color: #ffffff;
    color: #111111;
    padding-block: 3em;
  }

  #shopify-section-{{ section.id }} .main-policy__title {
    font-family: var(--theme-font-family-serif);
    font-size: clamp(1.8em, 4vw, 2.5em);
    font-weight: 400;
    line-height: 1.2;
    margin: 0 0 1em;
  }


{% endstyle %}

{% schema %}
{
  "name": "Policy content",
  "tag": "section",
  "class": "main-policy",
  "settings": [
    {
      "type": "header",
      "content": "Howto"
    },
    {
      "type": "paragraph",
      "content": "Displays policy content based on URL. Content is managed in Settings > Policies."
    }
  ]
}
{% endschema %}
