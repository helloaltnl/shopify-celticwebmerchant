{%- comment -%}
============================================================================
MAIN-PAGE-BLOGS
============================================================================
Main section for blog overview pages.
Shows articles from multiple blogs sorted by date.

DEPENDENCIES:
- html-articles-grid snippet
- html-article-card snippet
============================================================================
{%- endcomment -%}

{%- liquid
	assign heading_text = section.settings.heading
	if heading_text == blank
		assign heading_text = 'blog.heading' | t
	endif
-%}

<div class="main-page-blogs__content {{ section.settings.width }}">
	<header class="main-page-blogs__header">
		<h1 class="main-page-blogs__title">{{ heading_text }}</h1>
		{%- if section.settings.subheading != blank -%}
			<p class="main-page-blogs__subheading">{{ section.settings.subheading }}</p>
		{%- endif -%}
	</header>

	{%- capture articles_html -%}
		{%- render 'html-articles-grid',
			blocks: section.blocks,
			articles_per_blog: section.settings.articles_per_blog,
			max_articles: section.settings.max_articles,
			card_layout: section.settings.card_layout,
			show_image: section.settings.show_image,
			show_blog_title: section.settings.show_blog_title,
			show_date: section.settings.show_date,
			show_excerpt: section.settings.show_excerpt,
			show_cta: section.settings.show_cta,
			image_ratio: section.settings.image_ratio,
			class_prefix: 'main-page-blogs',
			card_background: section.settings.card_background_color,
			card_text_color: section.settings.card_text_color
		-%}
	{%- endcapture -%}

	{%- assign has_articles = articles_html | strip | size -%}

	{%- if has_articles > 0 -%}
		<ul class="main-page-blogs__grid" style="--grid-columns: {{ section.settings.columns_desktop | default: 4 }}; --grid-columns-tablet: {{ section.settings.columns_tablet | default: 3 }}; --grid-columns-mobile: {{ section.settings.columns_mobile | default: 1 }};">
			{{ articles_html }}
		</ul>
	{%- else -%}
		<p class="main-page-blogs__empty">{{ 'blog.no_articles' | t | default: 'No articles found.' }}</p>
	{%- endif -%}
</div>

{% style %}
	#shopify-section-{{ section.id }}.main-page-blogs {
		background-color: {{ section.settings.background_color | default: '#f8f8f8' }};
		color: {{ section.settings.text_color | default: '#111111' }};
		padding-block: 3em;
	}

	#shopify-section-{{ section.id }} .main-page-blogs__header {
		margin-bottom: 2em;
		text-align: {{ section.settings.text_align | default: 'center' }};
	}

	.main-page-blogs__title {
		font-family: var(--theme-font-family-serif);
		font-size: clamp(1.6em, 4vw, 2em);
		font-weight: 400;
		margin: 0;
	}

	.main-page-blogs__subheading {
		margin: 0.5em 0 0;
		opacity: 0.8;
	}

	.main-page-blogs__grid {
		display: grid;
		grid-template-columns: repeat(var(--grid-columns, 4), 1fr);
		gap: 0.5em;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.main-page-blogs__item {
		display: flex;
		min-width: 0;
	}

	.main-page-blogs__empty {
		text-align: center;
		opacity: 0.6;
		padding: 3em 1em;
	}

	@media (max-width: 64em) {
		.main-page-blogs__grid {
			grid-template-columns: repeat(var(--grid-columns-tablet, 3), 1fr);
		}
	}

	@media (max-width: 47.5em) {
		.main-page-blogs__grid {
			grid-template-columns: repeat(var(--grid-columns-mobile, 1), 1fr);
		}
	}
{% endstyle %}

