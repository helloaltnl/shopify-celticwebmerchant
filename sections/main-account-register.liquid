<div id="shopify-section-{{ section.id }}" class="main-account-register {{ section.settings.width }}{% if section.settings.custom_class != blank %} {{ section.settings.custom_class }}{% endif %}"{% if section.settings.anchor != blank %} id="{{ section.settings.anchor }}"{% endif %}>
  <div class="main-account-register__container">
    <h1 class="main-account-register__title">{{ 'customer.register.title' | t }}</h1>

    {%- form 'create_customer', novalidate: 'novalidate', class: 'main-account-register__form' -%}
      {%- if form.errors -%}
        <div class="main-account-register__errors" tabindex="-1" autofocus>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
          <span>{{ 'templates.contact.form.error_heading' | t }}</span>
        </div>
        <ul class="main-account-register__error-list">
          {%- for field in form.errors -%}
            <li>
              {%- if field == 'form' -%}
                {{ form.errors.messages[field] }}
              {%- else -%}
                <a href="#RegisterForm-{{ field }}">
                  {{ form.errors.translated_fields[field] | capitalize }}
                  {{ form.errors.messages[field] }}
                </a>
              {%- endif -%}
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}

      <div class="main-account-register__field">
        <label for="RegisterForm-FirstName" class="main-account-register__label">{{ 'customer.register.first_name' | t }}</label>
        <input
          type="text"
          name="customer[first_name]"
          id="RegisterForm-FirstName"
          class="main-account-register__input"
          {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
          autocomplete="given-name"
        >
      </div>

      <div class="main-account-register__field">
        <label for="RegisterForm-LastName" class="main-account-register__label">{{ 'customer.register.last_name' | t }}</label>
        <input
          type="text"
          name="customer[last_name]"
          id="RegisterForm-LastName"
          class="main-account-register__input"
          {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
          autocomplete="family-name"
        >
      </div>

      <div class="main-account-register__field">
        <label for="RegisterForm-email" class="main-account-register__label">{{ 'customer.register.email' | t }} <span aria-hidden="true">*</span></label>
        <input
          type="email"
          name="customer[email]"
          id="RegisterForm-email"
          class="main-account-register__input{% if form.errors contains 'email' %} main-account-register__input--error{% endif %}"
          {% if form.email %}value="{{ form.email }}"{% endif %}
          spellcheck="false"
          autocapitalize="off"
          autocomplete="email"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-email-error"
          {% endif %}
        >
        {%- if form.errors contains 'email' -%}
          <span id="RegisterForm-email-error" class="main-account-register__field-error">
            {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}.
          </span>
        {%- endif -%}
      </div>

      <div class="main-account-register__field">
        <label for="RegisterForm-password" class="main-account-register__label">{{ 'customer.register.password' | t }} <span aria-hidden="true">*</span></label>
        <input
          type="password"
          name="customer[password]"
          id="RegisterForm-password"
          class="main-account-register__input{% if form.errors contains 'password' %} main-account-register__input--error{% endif %}"
          aria-required="true"
          autocomplete="new-password"
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="RegisterForm-password-error"
          {% endif %}
        >
        {%- if form.errors contains 'password' -%}
          <span id="RegisterForm-password-error" class="main-account-register__field-error">
            {{ form.errors.translated_fields.password | capitalize }} {{ form.errors.messages.password }}.
          </span>
        {%- endif -%}
      </div>

      <button type="submit" class="main-account-register__submit">
        {{ 'customer.register.submit' | t }}
      </button>

      <p class="main-account-register__login-link">
        {{ 'customer.register.sign_in_link_text' | t | default: 'Already have an account?' }}
        <a href="{{ routes.account_login_url }}">{{ 'customer.login_page.sign_in' | t }}</a>
      </p>
    {%- endform -%}
  </div>
</div>

<style>
  #shopify-section-{{ section.id }}.main-account-register {
    --account-background: {{ section.settings.background_color | default: '#ffffff' }};
    --account-text: {{ section.settings.text_color | default: '#111111' }};
    --account-border: {{ section.settings.text_color | default: '#111111' | color_modify: 'alpha', 0.2 }};
    --account-error: #dc2626;

    background-color: var(--account-background);
    color: var(--account-text);
    padding-block: {{ section.settings.padding_block }}em;
  }

  .main-account-register__container {
    max-width: 28rem;
    margin-inline: auto;
    padding-inline: 1.5rem;
  }

  .main-account-register__title {
    font-family: var(--theme-font-family-serif, Georgia, serif);
    font-size: 2rem;
    font-weight: 400;
    margin: 0 0 1.5rem;
    text-align: center;
  }

  .main-account-register__form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .main-account-register__errors {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background-color: color-mix(in srgb, var(--account-error) 10%, transparent);
    border: 1px solid var(--account-error);
    border-radius: 0.25rem;
    color: var(--account-error);
    font-weight: 500;
  }

  .main-account-register__error-list {
    margin: 0;
    padding-left: 1.5rem;
    font-size: 0.875rem;
    color: var(--account-error);
  }

  .main-account-register__error-list a {
    color: inherit;
  }

  .main-account-register__field {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .main-account-register__label {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .main-account-register__input {
    padding: 0.75rem 1rem;
    border: 1px solid var(--account-border);
    border-radius: 0.25rem;
    background-color: transparent;
    color: inherit;
    font-family: inherit;
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }

  .main-account-register__input:focus {
    outline: none;
    border-color: var(--account-text);
  }

  .main-account-register__input--error {
    border-color: var(--account-error);
  }

  .main-account-register__field-error {
    font-size: 0.875rem;
    color: var(--account-error);
  }

  .main-account-register__submit {
    padding: 0.875rem 1.5rem;
    background-color: var(--account-text);
    color: var(--account-background);
    border: none;
    border-radius: 0.25rem;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .main-account-register__submit:hover {
    opacity: 0.85;
  }

  .main-account-register__login-link {
    margin: 0;
    text-align: center;
    font-size: 0.875rem;
  }

  .main-account-register__login-link a {
    color: inherit;
    font-weight: 500;
  }
</style>

{% schema %}
{
  "name": "Account register",
  "tag": "section",
  "class": "main-account-register-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "options": [
        { "value": "is-align-narrow", "label": "Narrow" },
        { "value": "is-align-small", "label": "Small" },
        { "value": "is-align", "label": "Regular" },
        { "value": "is-align-wide", "label": "Wide" },
        { "value": "is-align-full", "label": "Full" }
      ],
      "default": "is-align-full"
    },
    {
      "type": "range",
      "id": "padding_block",
      "label": "Vertical padding",
      "min": 0,
      "max": 6,
      "step": 0.5,
      "default": 4,
      "unit": "em"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "text",
      "id": "anchor",
      "label": "Anchor",
      "info": "ID for scroll links (without #)"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom class",
      "info": "Add custom CSS class"
    },
    {
      "type": "header",
      "content": "Howto"
    },
    {
      "type": "paragraph",
      "content": "Registration form for new customers. Displays on /account/register page."
    }
  ]
}
{% endschema %}
