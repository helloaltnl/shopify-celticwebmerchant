{%- style -%}
#theme-header{
  z-index: 100;
  & > section {}
  & > section.top {
    background-color: var(--theme-color-brown); color:var(--theme-color-white); height:5em;
    & > section.misc{
      display:flex; flex-wrap: nowrap; flex-direction: row; justify-content: space-between; align-items: center; column-gap: 1em; height:2em;
      & nav#shop-usps {
        font-size: 0.8em; opacity: 0.6;
      }
    }
    & > section.site{
      display:flex; flex-wrap: nowrap; flex-direction: row; justify-content: space-between; align-items: center; column-gap: 2em; height:3em;
      & > figure#site-logo {
        flex-basis:8em; margin: 0; padding: 0;
        position: relative;
        & > a {
          display:block; position: absolute; left:0; top:0; right:0; bottom:0; width:100%; height:100%; z-index: 3;
        }
      }
      & > nav#short-menu {
        margin-right: auto;
        & ul {
          list-style: none; padding:0; margin: 0;
          & > li {
            & > a { text-decoration: none;}
          }
        }
        & > ul {
          display:flex; flex-wrap: nowrap; flex-direction: row; justify-content: space-between; align-items: center; column-gap: 1em;
          & > li {
            & > a {
              color:#fff;
            }
          }
        }
      }
      & > .header__search {
        & summary {
          color:#fff;
        }
      }
      & > nav#user-menu {
        & ul {
          & li {
            & a { color: #fff;}
          }
        }
      }
    }		
  }
  & > section.bottom {
    background-color: var(--theme-color-white); color:var(--theme-color-brown);
  }
  &:where(body.is-scrolled-down #theme-header) {
    transform: translateY(-3em);
  }
  @media only screen and (max-width: 640px) {
    & > section.misc {
      
    }
    & > section.top {
      & > section.site {
        flex-wrap: wrap;
        & > form#site-search { flex-basis:100%; order:10;}
      }
    }
    & > section.bottom {
      display: none;
    }
  }

}
{%- endstyle -%}

