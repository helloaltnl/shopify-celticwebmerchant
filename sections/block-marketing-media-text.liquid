<section class="block-marketing-media-text">
  <div class="block-marketing-media-text__inner alignwide is-constrained">
    {%- if section.settings.heading != blank -%}
      {%- render 'html-marketing-headline',
        heading: section.settings.heading,
        subheading: section.settings.subheading,
        alignment: 'center'
      -%}
    {%- endif -%}
    
    {%- for block in section.blocks -%}
      <div class="block-marketing-media-text__item" {{ block.shopify_attributes }}>
        {%- case block.type -%}
          {%- when 'image_text' -%}
            {%- render 'html-marketing-split',
              image: block.settings.image,
              heading: block.settings.heading,
              text: block.settings.text,
              cta_text: block.settings.cta_text,
              cta_url: block.settings.cta_url,
              cta_style: block.settings.cta_style,
              image_position: block.settings.image_position,
              vertical_alignment: block.settings.vertical_alignment,
              image_width: block.settings.image_width,
              background_color: block.settings.background_color
            -%}
            
          {%- when 'video_text' -%}
            <div class="media-text-video">
              <div class="media-text-video__media media-text-video__media--{{ block.settings.video_position }}">
                {%- render 'html-marketing-video',
                  video_url: block.settings.video_url,
                  cover_image: block.settings.cover_image,
                  width: 'full',
                  aspect_ratio: '16-9'
                -%}
              </div>
              
              <div class="media-text-video__content">
                {%- if block.settings.heading != blank -%}
                  <h3 class="media-text-video__heading">{{ block.settings.heading | escape }}</h3>
                {%- endif -%}
                
                {%- if block.settings.text != blank -%}
                  <div class="media-text-video__text">{{ block.settings.text }}</div>
                {%- endif -%}
                
                {%- if block.settings.cta_text != blank and block.settings.cta_url != blank -%}
                  {%- render 'html-marketing-cta',
                    text: block.settings.cta_text,
                    url: block.settings.cta_url,
                    style: block.settings.cta_style,
                    alignment: 'left'
                  -%}
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      </div>
      
      {%- unless forloop.last -%}
        <div class="block-marketing-media-text__spacer"></div>
      {%- endunless -%}
    {%- endfor -%}
  </div>
</section>

{%- style -%}
  .block-marketing-media-text__spacer {
    height: 4rem;
  }
  
  .media-text-video {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  .media-text-video__media--right {
    order: 2;
  }
  
  .media-text-video__content {
    max-width: 600px;
  }
  
  .media-text-video__heading {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem;
  }
  
  .media-text-video__text {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }
  
  @media (max-width: 989px) {
    .media-text-video {
      grid-template-columns: 1fr;
    }
    
    .media-text-video__media--right {
      order: initial;
    }
    
    .block-marketing-media-text__spacer {
      height: 2rem;
    }
  }
{%- endstyle -%}

