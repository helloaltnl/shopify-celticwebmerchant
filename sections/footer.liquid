  <section class="footer-service">
    <h4>De beste klantenservice</h4>
    <figure>
      <picture>
        
      </picture>
    </figure>
    <p>Onze klantenservice helpt je graag!<br/><a href="">Neem hier contact op</a></p>
    
    
    {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
      <localization-form>
        {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
          <div>
            <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
            {%- render 'country-localization', localPosition: 'FooterCountry' -%}
          </div>
        {%- endform -%}
      </localization-form>
    {%- endif -%}
    
    {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
      <localization-form>
        {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
          <div>
            <h2 class="caption-large text-body" id="FooterLanguageLabel">
              {{ 'localization.language_label' | t }}
            </h2>
            {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
          </div>
        {%- endform -%}
      </localization-form>
    {%- endif -%}
    
  </section>
  <section class="footer-showroom">
    <h4>Showroom</h4>
    <p>Bezoek de showroom voor advies, bestellingen ophalen en het bekijken van artikelen uit ons magazijn.<br/><a href="">Onze openingstijden</a></p>
  </section>
  <section class="footer-newsletter">
    <h4>Mis nooit meer korting!</h4>
    {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="newsletter-form__field-wrapper">
        <div class="field">
          <input
            id="NewsletterForm--{{ section.id }}"
            type="email"
            name="contact[email]"
            class="field__input"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              autofocus
              aria-invalid="true"
              aria-describedby="ContactFooter-error"
            {% elsif form.posted_successfully? %}
              aria-describedby="ContactFooter-success"
            {% endif %}
            placeholder="{{ 'newsletter.label' | t }}"
            required
          >
          <label class="field__label" for="NewsletterForm--{{ section.id }}">
            {{ 'newsletter.label' | t }}
          </label>
          <button
            type="submit"
            class="newsletter-form__button field__button"
            name="commit"
            id="Subscribe"
            aria-label="{{ 'newsletter.button_label' | t }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-arrow.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
        {%- if form.errors -%}
          <small class="newsletter-form__message form__message" id="ContactFooter-error">
            <span class="svg-wrapper">
              {{- 'icon-error.svg' | inline_asset_content -}}
            </span>
            {{- form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email -}}
          </small>
        {%- endif -%}
      </div>
      {%- if form.posted_successfully? -%}
        <h3
          class="newsletter-form__message newsletter-form__message--success form__message"
          id="ContactFooter-success"
          tabindex="-1"
          autofocus
        >
          <span class="svg-wrapper">
            {{- 'icon-success.svg' | inline_asset_content -}}
          </span>
          {{- 'newsletter.success' | t }}
        </h3>
      {%- endif -%}
    {%- endform -%}
  </section>
  <section class="footer-links">
    {% if linklists.footer-service %}
      <ul>
        {% for link in linklists.footer-service.links %}
          <li>
            <a href="{{ link.url }}">
              <span>{{ link.title }}</span>
            </a>
          </li>
        {%- endfor -%}
      </ul>
    {% endif %}
  </section>
  <section class="footer-payments">
    <ul class="list list-payment" role="list">
      {%- for type in shop.enabled_payment_types -%}
        <li class="list-payment__item">
          {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
        </li>
      {%- endfor -%}
    </ul>
  </section>
  <section class="footer-shipping"></section>
  <section class="footer-copyright">
    <small>
      &copy; {{ 'now' | date: '%Y' }}. CelticWebMerchant BV. All rights reserved. <br/>* All prices are excluding shipping costs, customs fees and other levies Address: Marisstraat 8A, 3364 AZ Sliedrecht, The Netherlands.
    </small>
    <small>
      Custom theme development: totalli.nl
    </small>  
    <!-- <small class="copyright__content"
      >&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
    </small> -->
    <!-- <small class="copyright__content">{{ powered_by_link }}</small> -->
    {%- if section.settings.show_policy -%}
      <ul class="policies list-unstyled">
        {%- for policy in shop.policies -%}
          {%- if policy != blank -%}
            <li>
              <small class="copyright__content"
                ><a href="{{ policy.url }}">{{ policy.title | escape }}</a></small
              >
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </section>
</section>

{%- style -%}
  #pageFooter {
    background-color: var(--theme-color-blue); color:var(--theme-color-white);
  }
  .block-footer-content {
    display:flex; flex-direction: row; flex-wrap: wrap; justify-content: space-between; align-items: flex-start;
    column-gap: 4em; row-gap: 2em;
    
    & h4 {
      font-family: 'Absara Pro'; color:inherit; font-size: 1.4em;
      margin-top: 0; margin-bottom: 0.4em;
    }
    & p {
      margin-top: 0; letter-spacing: -0.02em;
    }
    
    & > .footer-usps {
      flex-basis: 100%; padding: 2em 0;
      & ul {
        list-style: none; padding:0; margin:0;
        display:flex; flex-direction: row; flex-wrap: wrap;
        align-items: flex-start; justify-content: space-between; 
        column-gap: 1em; row-gap: 1em;
        & li {
          & a {
            display:flex; flex-direction: row; align-items: center; justify-content: space-between; flex-wrap: nowrap;
            column-gap: 0.5em; color:inherit; text-decoration: none;
            & i { 
              flex-basis: 1.2em; min-width:1.2em; line-height: 1.2em;
              & svg { line-height: 1.2em; vertical-align: middle;}
            }
            & span { font-size: 0.75em; letter-spacing: -0.02em; line-height: 1.2em; white-space: nowrap;}
          }
        }
      }
    }
    & > .footer-service {
      flex-basis:15em; flex-grow: 1;
      & h4 {}
      & figure {
        float: left; width:3.2em; height:3.2em; padding:0; margin:0; margin-right: 1em;
        & picture {
          display:block; width:3.2em; height:3.2em;
          border-radius: 50%; background-color: #fff;
        }
      }
      & p { 
        margin-bottom: 2em; 
        & a {
          display:inline-flex; padding:0.4em 0.8em; border:currentcolor 1px solid; 
          color: inherit; text-decoration: none; margin-top: 1em;
          &:hover {
            background-color: #fff; color:var(--theme-color-blue);
          }
        }
      }
      & ul {
        list-style: none; padding:0; margin:0;
        display:flex; flex-direction: row; flex-wrap: wrap;
        align-items: flex-start; justify-content: flex-start; 
        column-gap: 0.8em; row-gap: 0.4em;
        & li {
          & a {
            color: inherit; text-decoration: none;
            & span { font-size: 0.8em;}
            &:hover { text-decoration: underline;}
          }
        }
      }
    }
    & > .footer-showroom {
      flex-basis:15em; flex-grow: 1;
      & p {
        & a {
          display:inline-flex; padding:0.4em 0.8em; border:currentcolor 1px solid; 
          color: inherit; text-decoration: none; margin-top: 1em;
          &:hover {
            background-color: #fff; color:var(--theme-color-blue);
          }
        }
      }
    }
   
    & > .footer-newsletter {
      flex-basis:15em; flex-grow: 1;
    }
    & > .footer-links {
      & ul {
        list-style: none; padding:0; margin:0;
        display:flex; flex-direction: row; flex-wrap: wrap;
        align-items: flex-start; justify-content: center; 
        column-gap: 0.8em; row-gap: 0.4em;
        & li {
          & a {
            color: inherit; text-decoration: none;
            & span { font-size: 0.8em; letter-spacing: -0.02em;}
            &:hover { text-decoration: underline;}
          }
        }
      }
    }
    & > .footer-payments {
      flex-basis: 100%;
      & ul {
        list-style: none; padding:0; margin:0;
        display:flex; flex-direction: row; flex-wrap: wrap;
        align-items: flex-start; justify-content: center;
        column-gap: 1em; row-gap: 0.75em; 
      }
    }
    & > .footer-shipping {
      flex-basis: 100%;
      & ul {
        list-style: none; padding:0; margin:0;
        display:flex; flex-direction: row; flex-wrap: wrap;
        align-items: flex-start; justify-content: center;
        column-gap: 1em; row-gap: 0.75em; 
      }
    }
    & > .footer-copyright {
      flex-basis: 100%; text-align: center; padding-bottom: 2em;
      & a { color: inherit; }
      & small { display:block; opacity: 0.4; font-size: 0.75em; line-height: 1.4em;}
    }
  }
{%- endstyle -%}

