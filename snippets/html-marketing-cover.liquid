{% comment %}
  HTML Marketing Component: Cover
  Hero/cover with image or video background, overlay text & multiple CTAs
  
  Parameters:
  - image: {Object} Background image (also used as poster for video)
  - video: {Object} Shopify video object from Files library
  - focus_x: {Number} 0-100 - horizontal focus point - default: 50
  - focus_y: {Number} 0-100 - vertical focus point - default: 50
  - heading: {String} Main heading
  - subheading: {String} Subheading text
  - text: {String} Body text
  - buttons: {Array} Array of button blocks with settings: text, url, style, button_color, button_text_color
  - overlay_opacity: {String} light | medium | dark - default: medium
  - text_alignment: {String} left | center | right - default: center
  - text_position: {String} top | center | bottom - default: center
  - height: {String} small | medium | large | full - default: medium
{% endcomment %}

{%- liquid
  assign heading = heading | default: ''
  assign subheading = subheading | default: ''
  assign text = text | default: ''
  assign overlay_opacity = overlay_opacity | default: 'medium'
  assign text_alignment = text_alignment | default: 'center'
  assign text_position = text_position | default: 'center'
  assign height = height | default: 'medium'
  assign focus_x = focus_x | default: 50
  assign focus_y = focus_y | default: 50
  
  assign has_video = false
  if video != blank and video.sources.size > 0
    assign has_video = true
  endif
  
  assign has_buttons = false
  if buttons != blank and buttons.size > 0
    for button in buttons
      if button.settings.url != blank
        assign has_buttons = true
        break
      endif
    endfor
  endif
-%}

<style>
  .marketing-cover {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Height variations */
  .marketing-cover--height-small {
    min-height: 300px;
  }
  
  .marketing-cover--height-medium {
    min-height: 500px;
  }
  
  .marketing-cover--height-large {
    min-height: 700px;
  }
  
  .marketing-cover--height-full {
    min-height: 100vh;
  }
  
  /* Image */
  .marketing-cover__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .marketing-cover__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Video */
  .marketing-cover__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
    background-color: #111;
  }
  
  .marketing-cover__video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .marketing-cover__video video.is-loading {
    opacity: 0;
  }
  
  .marketing-cover__video video.is-loaded {
    opacity: 1;
    transition: opacity 0.3s ease;
  }
  
  /* Placeholder */
  .marketing-cover__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    z-index: 0;
  }
  
  .marketing-cover__placeholder-svg {
    width: 100%;
    height: 100%;
    opacity: 0.2;
  }
  
  /* Overlay */
  .marketing-cover__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    z-index: 1;
  }
  
  .marketing-cover--overlay-none .marketing-cover__overlay {
    opacity: 0;
  }
  
  .marketing-cover--overlay-light .marketing-cover__overlay {
    opacity: 0.2;
  }
  
  .marketing-cover--overlay-medium .marketing-cover__overlay {
    opacity: 0.4;
  }
  
  .marketing-cover--overlay-dark .marketing-cover__overlay {
    opacity: 0.6;
  }
  
  /* Content */
  .marketing-cover__content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: 2em;
    color: #fff;
  }
  
  .marketing-cover__inner {
    max-width: 800px;
    margin: 0 auto;
  }
  
  /* Text position */
  .marketing-cover--position-top .marketing-cover__content {
    align-self: flex-start;
    padding-top: 4em;
  }
  
  .marketing-cover--position-center .marketing-cover__content {
    align-self: center;
  }
  
  .marketing-cover--position-bottom .marketing-cover__content {
    align-self: flex-end;
    padding-bottom: 4em;
  }
  
  /* Text alignment */
  .marketing-cover--align-left .marketing-cover__inner {
    text-align: left;
    margin-left: 0;
  }
  
  .marketing-cover--align-center .marketing-cover__inner {
    text-align: center;
  }
  
  .marketing-cover--align-right .marketing-cover__inner {
    text-align: right;
    margin-right: 0;
  }
  
  /* Typography */
  .marketing-cover__subheading {
    font-size: 1em;
    margin: 0 0 1em;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.9;
  }
  
  .marketing-cover__heading {
    font-size: 3em;
    margin: 0 0 1rem;
    font-weight: 500;
    line-height: 1.2;
    color: #fff;
  }
  
  .marketing-cover__text {
    font-size: 1.25em;
    margin: 0 0 2em;
    line-height: 1.6;
    color: #fff;
  }
  
  /* Buttons container */
  .marketing-cover__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    margin-top: 2em;
  }
  
  .marketing-cover--align-left .marketing-cover__buttons {
    justify-content: flex-start;
  }
  
  .marketing-cover--align-center .marketing-cover__buttons {
    justify-content: center;
  }
  
  .marketing-cover--align-right .marketing-cover__buttons {
    justify-content: flex-end;
  }
  
  .marketing-cover__buttons .marketing-cta {
    padding: 0;
  }
  
  /* Responsive */
  @media (max-width: 749px) {
    .marketing-cover--height-medium {
      min-height: 400px;
    }
    
    .marketing-cover--height-large {
      min-height: 500px;
    }
    
    .marketing-cover__heading {
      font-size: 2em;
    }
    
    .marketing-cover__content {
      padding: 1.5em;
    }
    
    .marketing-cover__buttons {
      flex-direction: column;
      align-items: stretch;
    }
    
    .marketing-cover--align-center .marketing-cover__buttons,
    .marketing-cover--align-right .marketing-cover__buttons {
      align-items: center;
    }
  }
</style>

<div class="marketing-cover marketing-cover--height-{{ height }} marketing-cover--overlay-{{ overlay_opacity }} marketing-cover--align-{{ text_alignment }} marketing-cover--position-{{ text_position }}{% if has_video %} marketing-cover--has-video{% endif %}">
  {%- if has_video -%}
    <div class="marketing-cover__video"{% if image %} style="background-image: url('{{ image | image_url: width: 1600 }}'); background-size: cover; background-position: {{ focus_x }}% {{ focus_y }}%;"{% endif %}>
      <video
        loading="lazy"
        autoplay
        muted
        loop
        playsinline
        style="object-position: {{ focus_x }}% {{ focus_y }}%;"
      >
        {%- for source in video.sources -%}
          <source data-src="{{ source.url }}" type="{{ source.mime_type }}">
        {%- endfor -%}
      </video>
    </div>
  {%- elsif image -%}
    <div class="marketing-cover__image">
      <img
        src="{{ image | image_url: width: 1600 }}"
        srcset="
          {{ image | image_url: width: 750 }} 750w,
          {{ image | image_url: width: 1100 }} 1100w,
          {{ image | image_url: width: 1400 }} 1400w,
          {{ image | image_url: width: 1600 }} 1600w
        "
        sizes="100vw"
        alt="{{ image.alt | escape }}"
        width="{{ image.width }}"
        height="{{ image.height }}"
        loading="eager"
        fetchpriority="high"
        style="object-position: {{ focus_x }}% {{ focus_y }}%;"
      />
    </div>
  {%- else -%}
    <div class="marketing-cover__placeholder">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'marketing-cover__placeholder-svg' }}
    </div>
  {%- endif -%}
  
  <div class="marketing-cover__overlay"></div>
  
  <div class="marketing-cover__content">
    <div class="marketing-cover__inner">
      {%- if subheading != blank -%}
        <p class="marketing-cover__subheading">{{ subheading | escape }}</p>
      {%- endif -%}
      
      {%- if heading != blank -%}
        <h2 class="marketing-cover__heading">{{ heading | escape }}</h2>
      {%- endif -%}
      
      {%- if text != blank -%}
        <div class="marketing-cover__text">{{ text }}</div>
      {%- endif -%}
      
      {%- if has_buttons -%}
        <div class="marketing-cover__buttons">
          {%- for button in buttons -%}
            {%- if button.settings.url != blank -%}
              {%- render 'html-marketing-cta',
                text: button.settings.text,
                url: button.settings.url,
                style: button.settings.style,
                size: 'large',
                button_color: button.settings.button_color,
                button_text_color: button.settings.button_text_color
              -%}
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
