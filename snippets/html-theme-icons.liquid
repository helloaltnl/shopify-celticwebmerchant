{% comment %}
  ============================================================================
  HTML-ICON
  ============================================================================
  Renders an SVG icon from the theme-icons.svg sprite.

  PARAMETERS:
  - icon: (required) Icon name without 'icon-' prefix
          Examples: 'cart', 'close', 'search', 'heart'
  - size: (optional) Width and height in pixels. Default: 20
  - width: (optional) Custom width (overrides size)
  - height: (optional) Custom height (overrides size)
  - class: (optional) Additional CSS classes
  - aria_label: (optional) Accessible label for interactive icons
  - aria_hidden: (optional) Set to false for meaningful icons. Default: true

  USAGE:
  {% render 'html-icon', icon: 'cart' %}
  {% render 'html-icon', icon: 'close', size: 16 %}
  {% render 'html-icon', icon: 'search', class: 'icon-search', aria_label: 'Search' %}
  {% render 'html-icon', icon: 'heart', width: 24, height: 20 %}

  AVAILABLE ICONS:
  UI: 3d-model, account, arrow, caret, cart, cart-empty, checkmark, close,
      close-small, discount, error, filter, hamburger, heart, lock, minus,
      pause, play, plus, remove, search, share, zoom, success, truck,
      unavailable, check-mark, info, star, eye, padlock, reset, return,
      clipboard, copy, tick, chat-bubble, map-pin, price-tag, question-mark,
      stopwatch, ruler, inventory-status

  Social: facebook, instagram, pinterest, twitter, youtube, tiktok,
          snapchat, tumblr, vimeo
  ============================================================================
{% endcomment %}

{%- liquid
  assign icon_size = size | default: 20
  assign icon_width = width | default: icon_size
  assign icon_height = height | default: icon_size
  assign icon_class = 'icon icon-' | append: icon
  if class != blank
    assign icon_class = icon_class | append: ' ' | append: class
  endif
  assign is_aria_hidden = aria_hidden | default: true
-%}

<svg
  class="{{ icon_class }}"
  width="{{ icon_width }}"
  height="{{ icon_height }}"
  fill="currentcolor" 
  {%- if aria_label != blank %}
  aria-label="{{ aria_label }}"
  role="img"
  
  {%- elsif is_aria_hidden %}
  aria-hidden="true"
  focusable="false"
  {%- endif %}
>
  <use href="#icon-{{ icon }}"></use>
</svg>
