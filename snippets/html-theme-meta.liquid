{%- comment -%}
============================================================================
HTML-THEME-META
============================================================================
Open Graph and Twitter Card meta tags for social sharing.

PARAMS:
- title       : Pre-calculated title with fallbacks (optional)
- description : Pre-calculated description with fallbacks (optional)

Renders:
- Open Graph tags (og:title, og:description, og:image, etc.)
- Twitter Card tags
- Product-specific price meta (on product pages)

Include once in layout files, after <title> tag.

USAGE:
{% render 'html-theme-meta', title: meta_title, description: meta_description %}
============================================================================
{%- endcomment -%}

{%- liquid
	assign og_title = title | default: page_title | default: shop.name
	assign og_url = canonical_url | default: request.origin
	assign og_type = 'website'
	assign og_description = description | default: page_description | default: settings.seo_description | default: shop.name

	comment
		Image fallback: page_image → seo_image → logo
	endcomment
	assign og_image = page_image | default: settings.seo_image | default: settings.logo

	if request.page_type == 'product'
		assign og_type = 'product'
	elsif request.page_type == 'article'
		assign og_type = 'article'
	elsif request.page_type == 'password'
		assign og_url = request.origin
	endif
-%}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">

{%- if og_image -%}
<meta property="og:image" content="https:{{ og_image | image_url: width: 1200 }}">
<meta property="og:image:secure_url" content="https:{{ og_image | image_url: width: 1200 }}">
<meta property="og:image:width" content="{{ og_image.width | at_most: 1200 }}">
<meta property="og:image:height" content="{{ og_image.height | times: 1200 | divided_by: og_image.width | at_most: og_image.height }}">
{%- endif -%}

{%- if request.page_type == 'product' -%}
<meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
<meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}

{%- if settings.social_twitter_link != blank -%}
<meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | split: 'x.com/' | last | prepend: '@' }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">
