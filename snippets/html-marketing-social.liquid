{% comment %}
  HTML Marketing Component: Social
  Social media links/icons
  
  Parameters:
  - heading: {String} Optional heading
  - links: {Array} Array of {platform, url} objects
  - style: {String} icons | buttons - default: icons
  - size: {String} small | medium | large - default: medium
  - alignment: {String} left | center | right - default: center
  - color_mode: {String} default | branded | monochrome - default: default
{% endcomment %}

{%- liquid
  assign heading = heading | default: ''
  assign links = links | default: ''
  assign style = style | default: 'icons'
  assign size = size | default: 'medium'
  assign alignment = alignment | default: 'center'
  assign color_mode = color_mode | default: 'default'
-%}

<div class="marketing-social marketing-social--{{ style }} marketing-social--{{ size }} marketing-social--align-{{ alignment }} marketing-social--{{ color_mode }}">
  {%- if heading != blank -%}
    <h3 class="marketing-social__heading">{{ heading | escape }}</h3>
  {%- endif -%}
  
  {%- if links != blank and links.size > 0 -%}
    <div class="marketing-social__links">
      {%- for link in links -%}
        <a 
          href="{{ link.url }}" 
          class="marketing-social__link marketing-social__link--{{ link.platform }}"
