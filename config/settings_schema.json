[
  {
    "name": "theme_info",
    "theme_name": "CWM",
    "theme_version": "1.0.0",
    "theme_author": "Alt",
    "theme_documentation_url": "https://alt.nl",
    "theme_support_url": "https://alt.nl"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32×32px recommended"
      }
    ]
  },
  {
    "name": "SEO",
    "settings": [
      {
        "type": "textarea",
        "id": "seo_description",
        "label": "Homepage meta description",
        "info": "Used for the homepage and as fallback for pages without a description. Recommended: 150-160 characters."
      },
      {
        "type": "image_picker",
        "id": "seo_image",
        "label": "Default share image",
        "info": "Fallback image for social sharing when page has no image. Recommended: 1200×630px"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text",
            "default": "#111111"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Button background",
            "default": "#243406"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Button label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Secondary button label",
            "default": "#111111"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "Shadow",
            "default": "#111111"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "notification",
            "label": "Notification"
          }
        ],
        "default": "drawer"
      }
    ]
  },
  {
    "name": "Product",
    "settings": [
      {
        "type": "header",
        "content": "Pricing"
      },
      {
        "type": "checkbox",
        "id": "price_show_compare",
        "label": "Show compare at price",
        "default": true,
        "info": "Display original price when product is on sale"
      },
      {
        "type": "checkbox",
        "id": "price_show_tax_notice",
        "label": "Show tax notice",
        "default": false,
        "info": "Display 'Incl. VAT' or 'Excl. VAT' based on market settings"
      },
      {
        "type": "header",
        "content": "Stock"
      },
      {
        "type": "range",
        "id": "stock_low_threshold",
        "label": "Low stock threshold",
        "min": 1,
        "max": 20,
        "step": 1,
        "default": 3,
        "info": "Show low stock warning when inventory is at or below this number"
      }
    ]
  },
  {
    "name": "Socials",
    "settings": [
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/shopname"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/shopname"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "X (Twitter)",
        "info": "https://x.com/shopname"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/shopname"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://tiktok.com/@shopname"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/shopname"
      },
      {
        "type": "text",
        "id": "social_linkedin_link",
        "label": "LinkedIn",
        "info": "https://linkedin.com/company/shopname"
      }
    ]
  }
]
